    <script>
        // ì „ì—­ ë³€ìˆ˜
        let expenses = JSON.parse(localStorage.getItem('expenses')) || [];
        let chart = null;
        let stream = null;

        // ì¹´í…Œê³ ë¦¬ ë¶„ë¥˜ í‚¤ì›Œë“œ
        const categoryKeywords = {
            'ì‹ë¹„': ['ë§ˆíŠ¸', 'ì‹ë‹¹', 'ì¹´í˜', 'ì»¤í”¼', 'ìŒì‹', 'ì¹˜í‚¨', 'í”¼ì', 'í–„ë²„ê±°', 'ìŒ€', 'ê³¼ì¼', 'ì•¼ì±„', 'ìœ¡ë¥˜', 'ë² ì´ì»¤ë¦¬', 'ì œê³¼', 'ìŒë£Œ'],
            'êµí†µë¹„': ['ë²„ìŠ¤', 'ì§€í•˜ì² ', 'íƒì‹œ', 'ê¸°ì°¨', 'í•­ê³µ', 'ì£¼ìœ ', 'ê¸°ë¦„', 'í†¨ê²Œì´íŠ¸', 'ì£¼ì°¨', 'ì¹´ë“œíƒì‹œ', 'KTX'],
            'ì‡¼í•‘': ['ì˜ë¥˜', 'ì‹ ë°œ', 'ê°€ë°©', 'í™”ì¥í’ˆ', 'ì•¡ì„¸ì„œë¦¬', 'ì „ìì œí’ˆ', 'ê°€ì „', 'ê°€êµ¬', 'ì„œì ', 'ë¬¸êµ¬', 'ì˜¨ë¼ì¸'],
            'ê³µê³¼ê¸ˆ': ['ì „ê¸°', 'ê°€ìŠ¤', 'ìˆ˜ë„', 'ì¸í„°ë„·', 'í†µì‹ ', 'ê´€ë¦¬ë¹„', 'ë³´í—˜', 'ì€í–‰', 'ì¹´ë“œ'],
            'ì˜ë£Œë¹„': ['ë³‘ì›', 'ì•½êµ­', 'ì˜ë£Œ', 'ì¹˜ê³¼', 'ì•ˆê³¼', 'ê±´ê°•ê²€ì§„', 'ì˜ì–‘ì œ', 'ì˜ì•½í’ˆ'],
            'ì—¬ê°€': ['ì˜í™”', 'ê²Œì„', 'ìŠ¤í¬ì¸ ', 'í—¬ìŠ¤', 'ë¯¸ìš©', 'ë†€ì´ê³µì›', 'ì—¬í–‰', 'ìˆ™ë°•', 'ê´€ê´‘'],
            'ê¸°íƒ€': []
        };

        // ì´ˆê¸°í™”
        document.addEventListener('DOMContentLoaded', function() {
            updateStats();
            updateChart();
            setupEventListeners();
        });

        function setupEventListeners() {
            document.getElementById('fileInput').addEventListener('change', handleFileUpload);
            document.getElementById('captureBtn').addEventListener('click', capturePhoto);
            
            // ë“œë˜ê·¸ ì•¤ ë“œë¡­
            const uploadArea = document.querySelector('.upload-area');
            uploadArea.addEventListener('dragover', (e) => {
                e.preventDefault();
                uploadArea.style.backgroundColor = 'rgba(52, 152, 219, 0.1)';
            });
            
            uploadArea.addEventListener('dragleave', (e) => {
                e.preventDefault();
                uploadArea.style.backgroundColor = '';
            });
            
            uploadArea.addEventListener('drop', (e) => {
                e.preventDefault();
                uploadArea.style.backgroundColor = '';
                const files = e.dataTransfer.files;
                if (files.length > 0) {
                    processImage(files[0]);
                }
            });
        }

        function handleFileUpload(event) {
            const file = event.target.files[0];
            if (file) {
                processImage(file);
            }
        }

        function startCamera() {
            const video = document.getElementById('video');
            const captureBtn = document.getElementById('captureBtn');
            
            navigator.mediaDevices.getUserMedia({ video: true })
                .then(function(mediaStream) {
                    stream = mediaStream;
                    video.srcObject = mediaStream;
                    video.style.display = 'block';
                    captureBtn.style.display = 'block';
                    video.play();
                })
                .catch(function(err) {
                    alert('ì¹´ë©”ë¼ì— ì ‘ê·¼í•  ìˆ˜ ì—†ìŠµë‹ˆë‹¤: ' + err.message);
                });
        }

        function capturePhoto() {
            const video = document.getElementById('video');
            const canvas = document.getElementById('canvas');
            const context = canvas.getContext('2d');
            
            canvas.width = video.videoWidth;
            canvas.height = video.videoHeight;
            context.drawImage(video, 0, 0);
            
            // ìŠ¤íŠ¸ë¦¼ ì¢…ë£Œ
            if (stream) {
                stream.getTracks().forEach(track => track.stop());
            }
            video.style.display = 'none';
            document.getElementById('captureBtn').style.display = 'none';
            
            // ìº”ë²„ìŠ¤ë¥¼ blobìœ¼ë¡œ ë³€í™˜
            canvas.toBlob(function(blob) {
                processImage(blob);
            });
        }

        function processImage(file) {
            const previewArea = document.getElementById('previewArea');
            
            // ë¡œë”© í‘œì‹œ
            previewArea.innerHTML = `
                <div class="loading">
                    <div class="spinner"></div>
                    <p>ì˜ìˆ˜ì¦ì„ ë¶„ì„í•˜ê³  ìˆìŠµë‹ˆë‹¤...</p>
                </div>
            `;

            // ì´ë¯¸ì§€ ë¯¸ë¦¬ë³´ê¸°
            const reader = new FileReader();
            reader.onload = function(e) {
                const img = new Image();
                img.onload = function() {
                    // OCR ì²˜ë¦¬
                    performOCR(e.target.result);
                };
                img.src = e.target.result;
            };
            reader.readAsDataURL(file);
        }

        function performOCR(imageSrc) {
            Tesseract.recognize(
                imageSrc,
                'kor+eng',
                {
                    logger: m => {
                        if (m.status === 'recognizing text') {
                            const progress = Math.round(m.progress * 100);
                            document.querySelector('.loading p').textContent = 
                                `ì˜ìˆ˜ì¦ ë¶„ì„ ì¤‘... ${progress}%`;
                        }
                    }
                }
            ).then(({ data: { text } }) => {
                analyzeReceipt(text, imageSrc);
            }).catch(err => {
                console.error('OCR ì˜¤ë¥˜:', err);
                showError('OCR ì²˜ë¦¬ ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤.');
            });
        }

        function analyzeReceipt(text, imageSrc) {
            console.log('OCR ê²°ê³¼:', text);
            
            // í…ìŠ¤íŠ¸ì—ì„œ ê¸ˆì•¡ê³¼ ìƒí’ˆëª… ì¶”ì¶œ
            const items = extractItemsFromText(text);
            const total = extractTotalAmount(text);
            const store = extractStoreName(text);
            const date = new Date();
            
            // ê²°ê³¼ í‘œì‹œ
            displayAnalysisResults(items, total, store, imageSrc, date);
            
            // ë°ì´í„° ì €ì¥
            if (items.length > 0 || total > 0) {
                const expense = {
                    id: Date.now(),
                    date: date.toISOString(),
                    store: store,
                    items: items,
                    total: total,
                    image: imageSrc
                };
                expenses.push(expense);
                localStorage.setItem('expenses', JSON.stringify(expenses));
                updateStats();
                updateChart();
                updateAdvice();
            }
        }

        function extractItemsFromText(text) {
            const items = [];
            const lines = text.split('\n');
            
            for (let line of lines) {
                // ê¸ˆì•¡ íŒ¨í„´ ë§¤ì¹­ (ìˆ«ì,ìˆ«ì í˜•íƒœ)
                const priceMatch = line.match(/(\d{1,3}(?:,\d{3})*|\d+)/g);
                if (priceMatch) {
                    const prices = priceMatch.filter(p => parseInt(p.replace(/,/g, '')) > 100);
                    if (prices.length > 0) {
                        const price = parseInt(prices[prices.length - 1].replace(/,/g, ''));
                        const itemName = line.replace(/\d+.*$/g, '').trim() || 'ìƒí’ˆ';
                        const category = categorizeItem(line);
                        
                        if (price > 0 && price < 1000000) { // í•©ë¦¬ì ì¸ ê¸ˆì•¡ ë²”ìœ„
                            items.push({
                                name: itemName,
                                price: price,
                                category: category
                            });
                        }
                    }
                }
            }
            
            // ì¤‘ë³µ ì œê±° ë° ì •ë ¬
            const uniqueItems = items.filter((item, index, self) => 
                index === self.findIndex(i => i.name === item.name && i.price === item.price)
            );
            
            return uniqueItems.slice(0, 10); // ìµœëŒ€ 10ê°œ í•­ëª©
        }

        function extractTotalAmount(text) {
            // ì´ì•¡, í•©ê³„ ë“±ì˜ í‚¤ì›Œë“œ ì°¾ê¸°
            const totalPatterns = [
                /ì´[ì•¡ê³„]\s*:?\s*(\d{1,3}(?:,\d{3})*)/,
                /í•©ê³„\s*:?\s*(\d{1,3}(?:,\d{3})*)/,
                /total\s*:?\s*(\d{1,3}(?:,\d{3})*)/i,
                /ê²°ì œ.*?(\d{1,3}(?:,\d{3})*)/
            ];
            
            for (let pattern of totalPatterns) {
                const match = text.match(pattern);
                if (match) {
                    return parseInt(match[1].replace(/,/g, ''));
                }
            }
            
            // ê°€ì¥ í° ê¸ˆì•¡ì„ ì´ì•¡ìœ¼ë¡œ ì¶”ì •
            const allNumbers = text.match(/\d{1,3}(?:,\d{3})*/g);
            if (allNumbers) {
                const amounts = allNumbers.map(n => parseInt(n.replace(/,/g, '')))
                    .filter(n => n > 1000 && n < 1000000);
                return amounts.length > 0 ? Math.max(...amounts) : 0;
            }
            
            return 0;
        }

        function extractStoreName(text) {
            const lines = text.split('\n').filter(line => line.trim().length > 0);
            
            // ì²« ë²ˆì§¸ ì˜ë¯¸ìˆëŠ” ë¼ì¸ì„ ìƒì ëª…ìœ¼ë¡œ ì¶”ì •
            for (let line of lines.slice(0, 5)) {
                const cleanLine = line.trim();
                if (cleanLine.length > 2 && cleanLine.length < 30 && 
                    !/\d/.test(cleanLine) && !/[:\-\*]/.test(cleanLine)) {
                    return cleanLine;
                }
            }
            
            return 'ì•Œ ìˆ˜ ì—†ëŠ” ìƒì ';
        }

        function categorizeItem(text) {
            const lowerText = text.toLowerCase();
            
            for (let [category, keywords] of Object.entries(categoryKeywords)) {
                if (category === 'ê¸°íƒ€') continue;
                
                for (let keyword of keywords) {
                    if (lowerText.includes(keyword.toLowerCase())) {
                        return category;
                    }
                }
            }
            
            return 'ê¸°íƒ€';
        }

        function displayAnalysisResults(items, total, store, imageSrc, date) {
            const previewArea = document.getElementById('previewArea');
            
            let itemsHtml = '';
            if (items.length > 0) {
                itemsHtml = items.map(item => `
                    <div class="expense-item">
                        <div>
                            <strong>${item.name}</strong>
                            <span class="expense-category category-${item.category.toLowerCase()}">${item.category}</span>
                        </div>
                        <div class="expense-amount">â‚©${item.price.toLocaleString()}</div>
                    </div>
                `).join('');
            }
            
            previewArea.innerHTML = `
                <img src="${imageSrc}" alt="ì˜ìˆ˜ì¦ ë¯¸ë¦¬ë³´ê¸°" class="preview-image">
                <div class="analysis-results">
                    <h4>ğŸª ${store}</h4>
                    <p>ğŸ“… ${date.toLocaleDateString('ko-KR')}</p>
                    <p><strong>ğŸ’° ì´ ê¸ˆì•¡: â‚©${total.toLocaleString()}</strong></p>
                    
                    ${items.length > 0 ? `
                        <h5 style="margin-top: 20px; margin-bottom: 10px;">ğŸ“ ìƒì„¸ í•­ëª©</h5>
                        ${itemsHtml}
                    ` : ''}
                </div>
            `;
        }

        function updateStats() {
            const today = new Date().toDateString();
            const todayExpenses = expenses.filter(exp => 
                new Date(exp.date).toDateString() === today
            );
            
            const totalAmount = expenses.reduce((sum, exp) => sum + exp.total, 0);
            const todayAmount = todayExpenses.reduce((sum, exp) => sum + exp.total, 0);
            const avgAmount = expenses.length > 0 ? Math.round(totalAmount / expenses.length) : 0;
            
            document.getElementById('totalExpense').textContent = `â‚©${totalAmount.toLocaleString()}`;
            document.getElementById('todayExpense').textContent = `â‚©${todayAmount.toLocaleString()}`;
            document.getElementById('avgExpense').textContent = `â‚©${avgAmount.toLocaleString()}`;
            document.getElementById('expenseCount').textContent = expenses.length.toString();
        }

        function updateChart() {
            const ctx = document.getElementById('expenseChart').getContext('2d');
            
            // ì¹´í…Œê³ ë¦¬ë³„ ì§‘ê³„
            const categoryTotals = {};
            expenses.forEach(expense => {
                expense.items.forEach(item => {
                    categoryTotals[item.category] = (categoryTotals[item.category] || 0) + item.price;
                });
            });
            
            const labels = Object.keys(categoryTotals);
            const data = Object.values(categoryTotals);
            const colors = [
                '#e74c3c', '#3498db', '#9b59b6', '#f39c12', 
                '#1abc9c', '#e67e22', '#95a5a6'
            ];
            
            if (chart) {
                chart.destroy();
            }
            
            chart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: labels,
                    datasets: [{
                        data: data,
                        backgroundColor: colors.slice(0, labels.length),
                        borderWidth: 2,
                        borderColor: '#fff'
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                padding: 20,
                                font: {
                                    size: 14
                                }
                            }
                        }
                    }
                }
            });
        }

        function updateAdvice() {
            const adviceList = document.getElementById('adviceList');
            const advice = generateAdvice();
            
            adviceList.innerHTML = advice.map(tip => `<li>${tip}</li>`).join('');
        }

        function generateAdvice() {
            if (expenses.length === 0) {
                return ['ì˜ìˆ˜ì¦ì„ ì—…ë¡œë“œí•˜ë©´ ë§ì¶¤í˜• ì ˆì•½ ì¡°ì–¸ì„ ì œê³µí•´ë“œë¦½ë‹ˆë‹¤'];
            }
            
            const advice = [];
            const categoryTotals = {};
            const totalAmount = expenses.reduce((sum, exp) => sum + exp.total, 0);
            
            // ì¹´í…Œê³ ë¦¬ë³„ ì§‘ê³„
            expenses.forEach(expense => {
                expense.items.forEach(item => {
                    categoryTotals[item.category] = (categoryTotals[item.category] || 0) + item.price;
                });
            });
            
            // ê°€ì¥ í° ì§€ì¶œ ì¹´í…Œê³ ë¦¬
            const maxCategory = Object.keys(categoryTotals).reduce((a, b) => 
                categoryTotals[a] > categoryTotals[b] ? a : b, Object.keys(categoryTotals)[0]
            );
            
            if (maxCategory) {
                const percentage = Math.round((categoryTotals[maxCategory] / totalAmount) * 100);
                advice.push(`${maxCategory} ì§€ì¶œì´ ì „ì²´ì˜ ${percentage}%ë¥¼ ì°¨ì§€í•©ë‹ˆë‹¤. ì´ ë¶€ë¶„ì—ì„œ ì ˆì•½ì„ ê³ ë ¤í•´ë³´ì„¸ìš”.`);
            }
            
            // ì¼í‰ê·  ì§€ì¶œ
            const avgDaily = Math.round(totalAmount / Math.max(expenses.length, 1));
            if (avgDaily > 50000) {
                advice.push(`ì¼í‰ê·  ì§€ì¶œì´ â‚©${avgDaily.toLocaleString()}ì…ë‹ˆë‹¤. í•˜ë£¨ ì˜ˆì‚°ì„ ì •í•´ë³´ëŠ” ê²ƒì„ ì¶”ì²œí•©ë‹ˆë‹¤.`);
            }
            
            // ì‹ë¹„ ê´€ë ¨ ì¡°ì–¸
            if (categoryTotals['ì‹ë¹„'] > totalAmount * 0.4) {
                advice.push('ì‹ë¹„ ë¹„ì¤‘ì´ ë†’ìŠµë‹ˆë‹¤. í™ˆì¿¡í‚¹ì´ë‚˜ ë„ì‹œë½ ì¤€ë¹„ë¡œ ì™¸ì‹ë¹„ë¥¼ ì¤„ì—¬ë³´ì„¸ìš”.');
            }
            
            // ì¼ë°˜ì ì¸ ì ˆì•½ íŒ
            const generalTips = [
                'ì˜ìˆ˜ì¦ì„ ëª¨ì•„ì„œ ì›”ë³„ ì§€ì¶œ íŒ¨í„´ì„ íŒŒì•…í•´ë³´ì„¸ìš”.',
                'í• ì¸ í˜œíƒì´ë‚˜ ì ë¦½ê¸ˆì„ ì ê·¹ í™œìš©í•´ë³´ì„¸ìš”.',
                'ì¶©ë™êµ¬ë§¤ë¥¼ ì¤„ì´ê¸° ìœ„í•´ êµ¬ë§¤ ì „ í•˜ë£¨ ì •ë„ ìƒê°í•´ë³´ëŠ” ì‹œê°„ì„ ê°€ì ¸ë³´ì„¸ìš”.'
            ];
            
            advice.push(generalTips[Math.floor(Math.random() * generalTips.length)]);
            
            return advice;
        }

        function showError(message) {
            const previewArea = document.getElementById('previewArea');
            previewArea.innerHTML = `
                <div style="text-align: center; color: #e74c3c; padding: 40px;">
                    <h3>âš ï¸ ì˜¤ë¥˜ ë°œìƒ</h3>
                    <p>${message}</p>
                    <button class="upload-btn" onclick="location.reload()">ë‹¤ì‹œ ì‹œë„</button>
                </div>
            `;
        }

        // ë°ì´í„° ë‚´ë³´ë‚´ê¸°/ê°€ì ¸ì˜¤ê¸° ê¸°ëŠ¥
        function exportData() {
            const dataStr = JSON.stringify(expenses, null, 2);
            const dataUri = 'data:application/json;charset=utf-8,'+ encodeURIComponent(dataStr);
            
            const exportFileDefaultName = `ê°€ê³„ë¶€_${new Date().toISOString().split('T')[0]}.json`;
            
            const linkElement = document.createElement('a');
            linkElement.setAttribute('href', dataUri);
            linkElement.setAttribute('download', exportFileDefaultName);
            linkElement.click();
        }

        function importData(event) {
            const file = event.target.files[0];
            if (!file) return;
            
            const reader = new FileReader();
            reader.onload = function(e) {
                try {
                    const importedData = JSON.parse(e.target.result);
                    if (Array.isArray(importedData)) {
                        expenses = importedData;
                        localStorage.setItem('expenses', JSON.stringify(expenses));
                        updateStats();
                        updateChart();
                        updateAdvice();
                        alert('ë°ì´í„°ë¥¼ ì„±ê³µì ìœ¼ë¡œ ê°€ì ¸ì™”ìŠµë‹ˆë‹¤!');
                    } else {
                        alert('ì˜¬ë°”ë¥´ì§€ ì•Šì€ íŒŒì¼ í˜•ì‹ì…ë‹ˆë‹¤.');
                    }
                } catch (error) {
                    alert('íŒŒì¼ì„ ì½ëŠ” ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤.');
                }
            };
            reader.readAsText(file);
        }

        // ë°ì´í„° ì‚­ì œ ê¸°ëŠ¥
        function clearAllData() {
            if (confirm('ëª¨ë“  ë°ì´í„°ë¥¼ ì‚­ì œí•˜ì‹œê² ìŠµë‹ˆê¹Œ? ì´ ì‘ì—…ì€ ë˜ëŒë¦´ ìˆ˜ ì—†ìŠµë‹ˆë‹¤.')) {
                expenses = [];
                localStorage.removeItem('expenses');
                updateStats();
                updateChart();
                updateAdvice();
                document.getElementById('previewArea').innerHTML = `
                    <p style="text-align: center; color: #7f8c8d; padding: 40px;">
                        ì˜ìˆ˜ì¦ì„ ì—…ë¡œë“œí•˜ë©´ ì—¬ê¸°ì— ë¶„ì„ ê²°ê³¼ê°€ í‘œì‹œë©ë‹ˆë‹¤
                    </p>
                `;
                alert('ëª¨ë“  ë°ì´í„°ê°€ ì‚­ì œë˜ì—ˆìŠµë‹ˆë‹¤.');
            }
        }

        // ê°œì„ ëœ OCR ì „ì²˜ë¦¬
        function preprocessImage(canvas) {
            const ctx = canvas.getContext('2d');
            const imageData = ctx.getImageData(0, 0, canvas.width, canvas.height);
            const data = imageData.data;
            
            // ê·¸ë ˆì´ìŠ¤ì¼€ì¼ ë³€í™˜ ë° ëŒ€ë¹„ ì¦ê°€
            for (let i = 0; i < data.length; i += 4) {
                const gray = data[i] * 0.299 + data[i + 1] * 0.587 + data[i + 2] * 0.114;
                const enhanced = gray > 128 ? 255 : 0; // ì´ì§„í™”
                
                data[i] = enhanced;     // R
                data[i + 1] = enhanced; // G
                data[i + 2] = enhanced; // B
            }
            
            ctx.putImageData(imageData, 0, 0);
            return canvas.toDataURL();
        }

        // í–¥ìƒëœ í…ìŠ¤íŠ¸ ë¶„ì„
        function smartTextAnalysis(text) {
            // í•œê¸€ OCR ê²°ê³¼ ì •ë¦¬
            const cleanText = text
                .replace(/[^\w\sê°€-í£,.-]/g, ' ')
                .replace(/\s+/g, ' ')
                .trim();
            
            return cleanText;
        }

        // ì‹¤ì‹œê°„ ë¶„ì„ ê²°ê³¼ ì—…ë°ì´íŠ¸
        function liveAnalysis() {
            if (expenses.length > 0) {
                const recentExpenses = expenses.slice(-30); // ìµœê·¼ 30ê°œ
                const monthlySpending = calculateMonthlyTrend(recentExpenses);
                displayTrendAnalysis(monthlySpending);
            }
        }

        function calculateMonthlyTrend(expenseData) {
            const monthly = {};
            expenseData.forEach(expense => {
                const month = new Date(expense.date).toISOString().substr(0, 7);
                monthly[month] = (monthly[month] || 0) + expense.total;
            });
            return monthly;
        }

        function displayTrendAnalysis(monthlyData) {
            const months = Object.keys(monthlyData).sort();
            if (months.length > 1) {
                const lastMonth = monthlyData[months[months.length - 1]];
                const prevMonth = monthlyData[months[months.length - 2]];
                const change = ((lastMonth - prevMonth) / prevMonth * 100).toFixed(1);
                
                const trendElement = document.createElement('div');
                trendElement.className = 'trend-analysis';
                trendElement.innerHTML = `
                    <h4>ğŸ“ˆ ì§€ì¶œ íŠ¸ë Œë“œ</h4>
                    <p>ì „ì›” ëŒ€ë¹„ ${change > 0 ? '+' : ''}${change}% ${change > 0 ? 'ì¦ê°€' : 'ê°ì†Œ'}</p>
                `;
                
                // ê¸°ì¡´ íŠ¸ë Œë“œ ë¶„ì„ ì œê±° í›„ ì¶”ê°€
                const existing = document.querySelector('.trend-analysis');
                if (existing) existing.remove();
                
                document.querySelector('.stats-section').appendChild(trendElement);
            }
        }

        // í˜ì´ì§€ ë¡œë“œ ì‹œ ì‹¤í–‰
        window.addEventListener('load', function() {
            liveAnalysis();
            
            // ì£¼ê¸°ì ìœ¼ë¡œ ë¶„ì„ ì—…ë°ì´íŠ¸
            setInterval(liveAnalysis, 30000); // 30ì´ˆë§ˆë‹¤
        });

        // í‚¤ë³´ë“œ ë‹¨ì¶•í‚¤
        document.addEventListener('keydown', function(e) {
            if (e.ctrlKey || e.metaKey) {
                switch(e.key) {
                    case 'u':
                        e.preventDefault();
                        document.getElementById('fileInput').click();
                        break;
                    case 's':
                        e.preventDefault();
                        exportData();
                        break;
                    case 'Delete':
                        e.preventDefault();
                        clearAllData();
                        break;
                }
            }
        });

        // í„°ì¹˜ ì œìŠ¤ì²˜ ì§€ì› (ëª¨ë°”ì¼)
        let touchStartY = 0;
        document.addEventListener('touchstart', function(e) {
            touchStartY = e.touches[0].clientY;
        });

        document.addEventListener('touchend', function(e) {
            const touchEndY = e.changedTouches[0].clientY;
            const diff = touchStartY - touchEndY;
            
            // ìœ„ë¡œ ìŠ¤ì™€ì´í”„ ì‹œ ì¹´ë©”ë¼ ì‹¤í–‰
            if (diff > 50) {
                startCamera();
            }
        });

        // ìë™ ì €ì¥ ê¸°ëŠ¥
        setInterval(function() {
            if (expenses.length > 0) {
                localStorage.setItem('expenses', JSON.stringify(expenses));
                localStorage.setItem('lastSaved', new Date().toISOString());
            }
        }, 10000); // 10ì´ˆë§ˆë‹¤ ìë™ ì €ì¥

        // ì˜¤í”„ë¼ì¸ ì§€ì›
